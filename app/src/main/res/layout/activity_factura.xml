<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtImporteTotal"
        android:layout_x="144dp"
        android:layout_y="363dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtNombreFactura"
        android:id="@+id/textView11"
        android:layout_x="4dp"
        android:layout_y="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtDireccionFactura"
        android:id="@+id/textView12"
        android:layout_x="3dp"
        android:layout_y="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtTelefonoFactura"
        android:id="@+id/textView13"
        android:layout_x="4dp"
        android:layout_y="66dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtNombreRecogidoFactura"
        android:id="@+id/txtDatosNombre"
        android:layout_x="110dp"
        android:layout_y="4dp"
