        android:layout_x="220dp"
        android:layout_y="147dp"
        android:hint="@string/txtCuantasBebidasCompradas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonSalirAplicacion"
        android:id="@+id/buttonSalir"
        android:layout_x="4dp"
        android:layout_y="457dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonReiniciarAplicacion"
        android:id="@+id/buttonReiniciar"
        android:layout_x="5dp"
        android:layout_y="401dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCalcularImporteTotal"
        android:id="@+id/buttonCalcularImporte"
        android:layout_x="90dp"
        android:layout_y="457dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtPrecioBebidas"
        android:layout_x="170dp"
        android:layout_y="186dp"
        android:hint="@string/txtPrecioBebidasFacturaFinal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtCantidadTortillas"
        android:layout_x="192dp"
        android:layout_y="224dp"
        android:hint="@string/txtCantidadTortillasFactura" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtPrecioTortillas"
        android:layout_x="166dp"
        android:layout_y="257dp"
        android:hint="@string/txtPrecioTortillasFactura" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonMostrarPedido"
        android:id="@+id/btnMostrarPedido"
        android:layout_x="235dp"
        android:layout_y="401dp" />

</AbsoluteLayout>