        android:layout_x="109dp"
        android:layout_y="41dp"
        android:hint="Direccion Recogida" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_x="107dp"
        android:layout_y="67dp"
        android:hint="Telefono Recogido"
        android:id="@+id/txtDatosTelefono" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtBebidasCompradas"
        android:id="@+id/textView6"
        android:layout_x="4dp"
        android:layout_y="142dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtPrecioBebidas"
        android:id="@+id/textView14"
        android:layout_x="4dp"
        android:layout_y="184dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtCantidadTortillas"
        android:id="@+id/textView8"
        android:layout_x="3dp"
        android:layout_y="222dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtPrecioTortillas"
        android:id="@+id/textView15"
        android:layout_x="5dp"
        android:layout_y="254dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
